<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class name="Trains.Train" table="train">
        <meta attribute="class-description">
            De trein klasse.
        </meta>
        <id name="name" type="string" column="name"></id>
    </class>

    <class name="Trains.Wagon" table="WAGON">
        <meta attribute="class-description">
            De wagon klasse.
        </meta>
        <id name="name" type="string" column="name"></id>
        <property name="seats" column="SEATS" type="int"/>
        <property name="trainName" column="train_name" type="string"/>
    </class>
</hibernate-mapping>